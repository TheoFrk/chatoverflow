<component name="ProjectRunConfigurationManager">
  <configuration default="false" name="Full API package (sbt packagedArtifacts)" type="SbtRunConfiguration" factoryName="sbt Task">
    <!-- for IntelliJ < 2019.2-->
    <setting name="tasks" value="apiProject/packagedArtifacts" />
    <setting name="vmparams" value="-Xms512M -Xmx1024M -Xss1M -XX:+CMSClassUnloadingEnabled" />
    <setting name="workingDir" value="$PROJECT_DIR$" />

    <!-- for IntelliJ >= 2019.2 -->
    <option name="allowRunningInParallel" value="false" />
    <option name="tasks" value="apiProject/packagedArtifacts" />
    <option name="useSbtShell" value="false" />
    <option name="vmparams" value="-Xms512M -Xmx1024M -Xss1M -XX:+CMSClassUnloadingEnabled" />
    <option name="workingDir" value="$PROJECT_DIR$" />

    <!-- used by all IntelliJ versions -->
    <method v="2">
      <option name="Make" enabled="true" />
    </method>
  </configuration>
</component>